@model About

@*
    Default About Component
*@

<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hakkımda</h2>
        <p>Hakkımda kısmını aşağıdan inceleyebilirsiniz</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-4 justify-content-center">
            <div class="col-lg-4">
                <img src="@Url.Content(@Model.ImageUrl)" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 content">
                <h2>@Model.Title</h2>
                <p class="fst-italic py-3">
                    @Model.Description
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Doğum Tarihi:</strong> <span>@Model.BirthDate</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@Model.WebSite</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@Model.PhoneNumber</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@Model.City, Turkiye</span></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong><span>@Model.Age</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Mezuniyet:</strong> <span>@Model.Graduation</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@Model.Email</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Frelans:</strong> <span>@{
                                if(Model.IsAvailable.ToLower()=="evet")
                                        {
                                            <text>Mevcut</text>
                                        }
                                        else
                                        {
                                            <text>Mevcut Değil</text>
                                        }
                            }</span></li>
                        </ul>
                    </div>
                </div>
                <p class="py-3">
                    @Model.Description1
               </p>
            </div>
        </div>
    </div>
</section>