@model UserMessage

@{
    ViewData["Title"] = "Mesaj detayları";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">

    <div class="form-group">
        <label>Kimden</label>
        <input type="text" class="form-control" asp-for="Name" disabled/>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label>Mail</label>
        <input type="text" class="form-control" asp-for="Email" disabled />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label>Mesaj</label>
        <textarea type="text" class="form-control" asp-for="MessageBody" disabled></textarea>
        <span class="text-danger" asp-validation-for="MessageBody"></span>
    </div>
</form>