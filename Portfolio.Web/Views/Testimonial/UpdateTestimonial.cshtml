@model Testimonial

@{
    ViewData["Title"] = "Referans güncelle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">

    <input type="hidden" asp-for="TestimonialId" />

    <div class="form-group">
        <label>Kim</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>

    <div class="form-group">
        <label>Görev</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>

    <div class="form-group">
        <label>Resim</label>
        <input type="text" class="form-control" asp-for="ImageUrl" />
    </div>

    <div class="form-group">
        <label>Yorum</label>
        <input type="text" class="form-control" asp-for="Comment" />
    </div>

    <div class="form-group">
        <label>Değerlendirme</label>
        <input type="text" class="form-control" asp-for="Review" />
    </div>

    <button type="submit" class="btn btn-outline-primary">Güncelle</button>

</form>