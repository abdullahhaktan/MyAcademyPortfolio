@model SocialMedia

@{
    ViewData["Title"] = "Sosyal medya güncelle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">

    <input type="hidden" asp-for=SocialMediaId />

    <div class="form-group">
        <label>Proje Adı</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label>Proje Görsel Url</label>
        <input type="text" class="form-control" asp-for="Url" />
        <span class="text-danger" asp-validation-for="Url"></span>
    </div>

    <button class="btn btn-outline-primary">Güncelle</button>

</form>
