@{
    ViewData["Title"] = "İstatistikler";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 col-xl-3 mb-4">
        <div class="card h-100 shadow-sm border-0 rounded text-center">
            <div class="card-body d-flex flex-column justify-content-center">
                <h6 class="text-uppercase text-muted mb-2" style="letter-spacing: 1px;">Proje Sayısı</h6>
                <h2 class="fw-bold mb-3">@ViewBag.projectCount</h2>
                <i class="bi bi-kanban fs-3 text-primary"></i>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3 mb-4">
        <div class="card h-100 shadow-sm border-0 rounded text-center">
            <div class="card-body d-flex flex-column justify-content-center">
                <h6 class="text-uppercase text-muted mb-2" style="letter-spacing: 1px;">Yetenek Ortalaması</h6>
                <h2 class="fw-bold mb-3">@ViewBag.skillAverage</h2>
                <i class="bi bi-bar-chart-line-fill fs-3 text-success"></i>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3 mb-4">
        <div class="card h-100 shadow-sm border-0 rounded text-center">
            <div class="card-body d-flex flex-column justify-content-center">
                <h6 class="text-uppercase text-muted mb-2" style="letter-spacing: 1px;">Okunmamış Mesaj</h6>
                <h2 class="fw-bold mb-3">@ViewBag.unreadMessageCount</h2>
                <i class="bi bi-envelope-open-fill fs-3 text-danger"></i>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3 mb-4">
        <div class="card h-100 shadow-sm border-0 rounded text-center">
            <div class="card-body d-flex flex-column justify-content-center">
                <h6 class="text-uppercase text-muted mb-2" style="letter-spacing: 1px;">Son Mesaj Sahibi</h6>
                <h5 class="fw-bold mb-3">@ViewBag.lastMessageOwner</h5>
                <i class="bi bi-person-circle fs-3 text-info"></i>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-xl-3">
        <div class="card social-widget-card bg-primary">
            <div class="card-body">
                <h3 class="text-white m-0">Deneyim yılı</h3>
                <span class="m-t-10">@ViewBag.experienceYear</span>
                <i class="fas fa-briefcase"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card social-widget-card bg-info">
            <div class="card-body">
                <h5 class="text-white m-0">Çalıştığım şirket sayısı</h5>
                <span class="m-t-10">@ViewBag.companyCount</span>
                <i class="fas fa-building"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card social-widget-card bg-dark">
            <div class="card-body">
                <h5 class="text-white m-0">@ViewBag.reviewAverage</h5>
                <span class="m-t-10">Ortalama Değerlendirme</span>
                <i class="fas fa-star-half-alt"></i>

            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card social-widget-card bg-danger">
            <div class="card-body">
                <h3 class="text-white m-0">@ViewBag.maxReviewOwner</h3>
                <span class="m-t-10">En Yüksek Değerlendirme</span>
                <i class="fas fa-user"></i>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-xl-3">
        <div class="card social-widget-card bg-primary">
            <div class="card-body">
                <h3 class="text-white m-0">Yetenek Sayısı</h3>
                <span class="m-t-10">@ViewBag.skillCount</span>
                <i class="fas fa-briefcase"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card social-widget-card bg-info">
            <div class="card-body">
                <h5 class="text-white m-0">Yüksek seviyede yetenekler</h5>
                <span class="m-t-10">@ViewBag.HighSkills</span>
                <i class="fas fa-building"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card social-widget-card bg-dark">
            <div class="card-body">
                <h5 class="text-white m-0">Proje Sayısı</h5>
                <span class="m-t-10">@ViewBag.projectCount</span>
                <i class="fas fa-star-half-alt"></i>

            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card social-widget-card bg-danger">
            <div class="card-body">
                <h3 class="text-white m-0">@ViewBag.mostProjectCategory</h3>
                <span class="m-t-10">En çok proje kategorisi</span>
                <i class="fas fa-user"></i>
            </div>
        </div>
    </div>
</div>