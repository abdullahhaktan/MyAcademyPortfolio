@model Category

@{
    ViewData["Title"] = "Kategori güncelle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form action="/Category/UpdateCategory/" method="post">

    <input type="hidden" asp-for="CategoryId" />

    <div class="form-group">
        <label>Kategori Adı</label>
        <input type="text" class="form-control" asp-for="CategoryName" />
    </div>

    <button type="submit" class="btn btn-outline-primary">Güncelle</button>

</form>