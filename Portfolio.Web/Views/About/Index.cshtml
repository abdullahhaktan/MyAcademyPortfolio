@model About

@{
    ViewData["Title"] = "Hakkımda";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">

    <input type="hidden" asp-for="AboutId" />

    <div class="form-group">
        <label>Image Url</label>
        <input type="text" class="form-control" asp-for="ImageUrl" />
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
    </div>

    <div class="form-group">
        <label>Başlık</label>
        <input type="text" class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label>Açıklama 1</label>
        <input type="text" class="form-control" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label>Açıklama 2</label>
        <input type="text" class="form-control" asp-for="Description1" />
        <span class="text-danger" asp-validation-for="Description1"></span>
    </div>

    <div class="form-group">
        <label>Doğum Tarihi</label>
        <input type="text" class="form-control" asp-for="BirthDate" />
        <span class="text-danger" asp-validation-for="BirthDate"></span>
    </div>


    <div class="form-group">
        <label>Web site</label>
        <input type="text" class="form-control" asp-for="WebSite" />
        <span class="text-danger" asp-validation-for="WebSite"></span>
    </div>

    <div class="form-group">
        <label>Telefon numarası</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" />
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    </div>

    <div class="form-group">
        <label>Şehir</label>
        <input type="text" class="form-control" asp-for="City" />
        <span class="text-danger" asp-validation-for="City"></span>
    </div>

    <div class="form-group">
        <label>Mezuniyet derecesi</label>
        <input type="text" class="form-control" asp-for="Graduation" />
        <span class="text-danger" asp-validation-for="Graduation"></span>
    </div>

    <div class="form-group">
        <label>Mail</label>
        <input type="text" class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label>Frelance çalışınır mı? (Evet ya da Hayır)</label>
        <input type="text" class="form-control" asp-for="IsAvailable" />
        <span class="text-danger" asp-validation-for="IsAvailable"></span>
    </div>

    <div class="form-group">
        <label>Yaş</label>
        <input type="text" class="form-control" asp-for="Age" />
        <span class="text-danger" asp-validation-for="Age"></span>
    </div>

    <button class="btn btn-outline-primary">Kaydet</button>

</form>